<style>
	@font-face {
		font-family: yekan;
		font-weight: 400;
		font-style: normal;
		src: url(/fonts/yekan/yekan-normal.eot);
		src: url(/fonts/yekan/yekan-normal.eot?#iefix) format("embedded-opentype"),url(/fonts/yekan/yekan-normal.woff) format("woff"),url(/fonts/yekan/yekan-normal.ttf) format("truetype")
	}

	body {
		direction: rtl;
		background-color: #f5f5f5;
		background-image: url(/images/back-pattern.png);
		font-family: yekan;
		color: #444;
	}

	a {
		text-decoration: none;
	}

	.underlined_link {
		color: #1ca2bd;
		border-bottom: 1px dashed #1ca2bd;
		display: inline-block;
		line-height: 27px;
	}
	
	#top-bar {
		display: none !important;
	}

	.page-wrapper {
		position: absolute;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		margin: auto;
	}

	.panel-header {
		font-size: 15px;
	}

	.panel-header.success {
		background: #16a99b;
		color: #ffecec;
	}

	.panel-header.failed {
		background: #e43f56;
		color: #ffecec;
	}
</style>

<div class="flex items-center page-wrapper">
	<div class="md:w-1/2 sm:w-full md:mx-auto" style="padding: 0 20px;">

		<div class="flex flex-col break-words bg-white border border-2 rounded shadow-md">

			<div class="font-semibold bg-grey-lightest text-grey-darkest py-3 px-6 mb-0 shadow-inner panel-header {{ pay_status }}">{{ pay_title }}</div>

			<div class="w-full p-6">
				<div style="margin-bottom: 10px;">{{ pay_message }}</div>

				<a href="#" target="_blank" class="underlined_link">بازگشت به برنامه</a>
			</div>
		</div>

	</div>
</div>